<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:text="标题："
        android:textSize="@dimen/activity_createpost_address_font" />

    <EditText
        android:id="@+id/address"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/addressText"
        android:layout_alignTop="@+id/addressText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:layout_toRightOf="@id/addressText"
        android:maxWidth="100dp"
        android:text="TextView"
        android:textSize="@dimen/activity_createpost_address_font" />
    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressText"
        android:layout_alignLeft="@id/addressText"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/activity_createpost_tag_font"
        android:text="时间：" />



    <EditText
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timeText"
        android:layout_alignBaseline="@id/timeText"
        android:textSize="@dimen/activity_createpost_tag_font"
        android:text="TextView" />

    <TextView
        android:id="@+id/costText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/time"
        android:layout_alignTop="@id/timeText"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/activity_createpost_tag_font"
        android:text="花费：" />

    <EditText
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/costText"
        android:layout_alignBaseline="@id/timeText"
        android:textSize="@dimen/activity_createpost_tag_font"
        android:text="TextView" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeText"
        android:layout_alignLeft="@id/timeText"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/activity_createpost_tag_font"
        android:text="正文:" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_margin="15dp"
        android:text="发帖内容" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:text="发布" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/timeText"
        android:layout_below="@id/submit"
        android:layout_alignRight="@id/submit"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="-3dp"
        android:text="" />


</RelativeLayout>
